<UserControl x:Class="Llama_Search_Alpha.Pages.MainMenuSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Llama_Search_Alpha.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="210">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Margin="5" Content="Search" Height="50" Width="200" Click="Button_Click_1" Style="{StaticResource btn}" />
        <Button Margin="5" Content="Admin" Height="50" Width="200" Click="Button_Click_2" Style="{StaticResource btn}" />
        <Button Margin="5" Content="Games" Height="50" Width="200" Click="Button_Click_3" Style="{StaticResource btn}" />
    </StackPanel>
</UserControl>
